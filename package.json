{
  "name": "@oneshot101/paymenterjs",
  "version": "0.1.0",
  "description": "A developer-friendly Paymenter API client for TypeScript and JavaScript",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "bun install && bun run setup.ts",
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias",
    "start": "bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "paymenter",
    "api",
    "client",
    "typescript",
    "bun"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0neShot101/PaymenterJS.git"
  },
  "bugs": {
    "url": "https://github.com/0neShot101/PaymenterJS/issues"
  },
  "homepage": "https://github.com/0neShot101/PaymenterJS#readme",
  "author": "Andrew Tandy <andrewtandy12@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
